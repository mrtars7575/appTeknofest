<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deviceSettingsFragment">

    <ImageView
        android:id="@+id/distanceIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/image_border"
        app:layout_constraintEnd_toStartOf="@+id/volumeIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/distance_foreground"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/volumeIv"
        android:layout_width="95dp"
        android:layout_height="101dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/image_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/distanceIv"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volume"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/glassesIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="161dp"
        android:background="@drawable/image_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bluetoothIv"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/glasses_foreground"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/bluetoothIv"
        android:layout_width="100dp"
        android:layout_height="113dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/image_border"
        app:layout_constraintBottom_toBottomOf="@+id/glassesIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/glassesIv"
        app:srcCompat="@drawable/bluetooth"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>